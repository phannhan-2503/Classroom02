<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_bogoc"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_baigiang"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@drawable/custom_bogocbanner"
            app:civ_border_color="#FF000000"
            android:layout_alignParentTop="true"/>
        <LinearLayout
            android:id="@+id/thongtinbaidang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:layout_toEndOf="@+id/profile_image_baigiang"
            android:layout_toStartOf="@id/txtxoa_chinhsua"


            >
            <TextView
                android:id="@+id/tenGiangVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Huynh Phan Quoc Huy"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/ngayDangTin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dang vao ngay may thang may"
                android:textSize="16dp"
            />
        </LinearLayout>

        <TextView
            android:id="@+id/txtxoa_chinhsua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/three_dot"
            android:backgroundTint="#575454"
            android:textSize="15dp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/noiDungTin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="noi dung"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_DanhSachTapTin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black" />
    <TextView
        android:id="@+id/txt_nxLopHoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhận xét lớp học"
        android:textSize="16dp"
        android:padding="10dp"

        />

</LinearLayout>

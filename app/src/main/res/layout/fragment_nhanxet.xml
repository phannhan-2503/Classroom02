<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.nhanxetFragment">
    <include layout="@layout/toolbar_nhanxet"
        android:id="@+id/toolbarnhanxet"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_ndnhanxet"
        android:layout_below="@+id/toolbarnhanxet"
        android:layout_above="@+id/relative_nhanxet"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black"
        android:layout_above="@+id/relative_nhanxet"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_nhanxet"
        android:layout_alignParentBottom="true"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="16dp"
            android:id="@+id/edtndnhanxet"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="30dp"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_send"
            android:id="@+id/send_nhanxet"
            android:layout_alignParentEnd="true"
            android:layout_toStartOf="@+id/edtndnhanxet"
            />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="10dp"
android:padding="10dp"
    >
<de.hdodenhof.circleimageview.CircleImageView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_image_nhanxet"
    android:layout_width="43dp"
    android:layout_height="43dp"
    android:src="@drawable/custom_bogocbanner"
    app:civ_border_color="#FF000000"
    android:layout_alignParentTop="true"/>
<LinearLayout
    android:id="@+id/thongtinbaidang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="15dp"
    android:layout_toEndOf="@+id/profile_image_nhanxet"



    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tenGiaoVien_nhanxet"
            android:textStyle="bold"
            android:text="Huỳnh Phan Quốc Huy"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/thoigiang_nhanxet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="16dp"
            android:paddingStart="10dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/noidung_nhanxet"
        android:text="Huỳnh Phan Quốc Huy"
        android:textSize="16dp"
        />

</LinearLayout>

</RelativeLayout>